<div class="flex-row justify-space-between justify-center">
    <h1 class="page-title">Dashboard: {{username}}</h1>
</div>
<div class="flex-row justify-center">
    <button class="btn green-text" id="new-absence-btn"><i class="uil uil-plus-circle"></i> Create New Absence</button>
</div>

<div id="absences-holder">

    {{#each absence}}
    <article class="card">

        <div class="card-header absence-item flex-row justify-space-between align-center">
            <div> 
                {{!-- note: when running application on the local machine, replace 'format_date' with 'date_correct' to display the correct dates on the page. --}}
                <h1>{{format_date start_date}} - {{format_date end_date}}</h1>
            </div>
            <div class="data-item-med">
                <h1>{{leave.leave_type}}</h1>
            </div>
            <div class="data-item-med">
                <h1>{{absence_hours}} hours</h1>
            </div>
            <div class="data-item-med">
                <h1>{{status}}</h1>
            </div class="data-item-med">
            
            <button id="delete-btn" class="btn red-text" data-record="{{id}}"><i class="uil uil-trash-alt"></i> Delete Absence</button>
            <button id="edit-btn" class="btn blue-text" data-record="{{id}}"><i class="uil uil-pen"></i> Edit Absence</button>
        </div>


    </article>


    {{/each}}

</div>



{{#if absence}}
<script src="/javascript/change-absence.js"></script>
{{/if}}
<script src="/javascript/new-absence.js"></script>
